{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2021", "DOM", "DOM.Iterable"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "skipLibCheck": true,
      "types": ["vite/client"] 
    },
    "include": ["src"]
  }
  